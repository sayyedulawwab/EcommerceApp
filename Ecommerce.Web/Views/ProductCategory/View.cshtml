@model ProductCategoryViewVM
<section clase="w-3/4 mx-auto">
    <h4 class="mt-10 text-2xl font-bold leading-9 tracking-tight text-gray-900">Product Category</h4>
    <div>
        
            <div class="mt-10 flex">
                <div class="mr-2">
                    <label>Product Category Id:</label>
                </div>
                <div >
                    <p>@Model.ProductCategoryID</p>
                </div>
            </div>
            <div class="mt-10 flex">
                <div class="mr-2">
                    <label>Name:</label>
                </div>
                <div>
                    <p>@Model.Name</p>
                </div>
            </div>
            <div class="mt-10 flex">
                <div class="mr-2">
                    <label>Category Code:</label>
                </div>
                <div class="mr-2">
                    <p>@Model.Code</p>
                </div>
            </div>
        </div>


    @if (ViewBag.Error != null)
    {
        <h6>@ViewBag.Error</h6>
    }

</section>