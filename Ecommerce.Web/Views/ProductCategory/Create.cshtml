@model ProductCategoryCreateVM

<section class="w-3/4 mx-auto">
    <h4 class="mt-10 text-2xl font-bold leading-9 tracking-tight text-gray-900">Product Category Create</h4>

    <div class="mt-10">
        <form method="post" class="space-y-6">
            <div>
                <label for="Name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
                <div class="mt-2">
                    <input type="text" asp-for="Name" placeholder="Enter Name" class="block w-6/12 rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div>
                <label for="Code" class="block text-sm font-medium leading-6 text-gray-900">Category Code</label>
                <div class="mt-2">
                    <input type="text" asp-for="Code" placeholder="Enter product category code" class="block w-6/12 rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none">
                    <span asp-validation-for="Code"></span>
                </div>
            </div>
            <button type="submit" class="bg-green-600 text-white px-3 py-2 rounded-sm">Submit</button>
        </form>
    </div>
</section>
